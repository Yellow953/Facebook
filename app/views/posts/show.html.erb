<div class="p-5">
  <%= render @post %>

  <div>
    <%= link_to "Edit this post", edit_post_path(@post), class:"btn btn-warning m-1" %> |
    <%= link_to "Back to posts", posts_path, class:"btn btn-primary m-1" %>

    <%= button_to "Destroy this post", @post, method: :delete, class:"btn btn-danger m-1" %>
  </div>
</div>