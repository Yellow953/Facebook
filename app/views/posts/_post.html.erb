<div id="<%= dom_id post %>">
  <div class="row">
    <div class="col-2">
      <%= image_tag post.image, class:"img-fluid img-responsive p-2" if post.image.attached? %>
    </div>
    <div class="col-10 my-auto">
       <p>
    <strong>Name:</strong>
    <%= post.name %>
  </p>

  <p>
    <strong>Text:</strong>
    <%= post.text %>
  </p>

  <p>
    <strong>User: </strong>
    <%= post.user.email %>
  </p>
    </div>
  </div>
</div>
