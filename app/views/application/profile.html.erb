<div class="m-4">
    <div class="row">
        <div class="col-md-6">
             <h2>Edit Profile</h2>

            <%= form_for(edit_user_url(), method: :post ) do |f| %>
                <div class="field my-2">
                    <%= f.label :email %><br />
                    <%= f.email_field :email, autofocus: true, autocomplete: "email", value: @user.email, class: "form-control" %>
                </div>
                <div class="field my-2">
                    <%= f.label :username %><br />
                    <%= f.text_field :username, value: @user.username, class: "form-control" %>
                </div>
                <div class="field my-2">
                    <%= f.label :phone %><br />
                    <%= f.number_field :phone, value: @user.phone, class: "form-control" %>
                </div>
                <div class="field my-2">
                    <%= f.label :image %>
                    <%= f.file_field :image, class:"form-control", accept: "image/jpeg,image.gif,image/png" %>
                </div>
                <div class="field my-2">
                    <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
                    <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
                    <% if @minimum_password_length %>
                    <br />
                    <em><%= @minimum_password_length %> characters minimum</em>
                    <% end %>
                </div>
                <div class="field my-2">
                    <%= f.label :password_confirmation %><br />
                    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
                </div>
                <div class="field my-2">
                    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
                    <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
                </div>
                <div class="actions">
                    <%= f.submit "Update", class:"btn btn-primary" %>
                </div>
            <% end %>
        </div>
        <div class="col-md-6">
            <% if @user.image.attached? %>
                <h3>Profile Image</h3>
                <%= image_tag @user.image, class:"img-fluid img-responsive p-2" %>
            <% end %>    

            <h3>Cancel my account?</h3>
            <p><%= button_to "Cancel my account", registration_path(current_user), data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'}, method: :delete, class:"btn btn-danger m-2" %></p>
        </div>
    </div>
    
    <div class="m-5">
        <h2>User Posts</h2>
        <% @user.posts.each do |post| %>
            <%= render post %> <hr>
        <% end %>
    </div>
</div>